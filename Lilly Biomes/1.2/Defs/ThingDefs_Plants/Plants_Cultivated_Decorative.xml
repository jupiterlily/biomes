<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="Flowers_BaseFlower" ParentName="PlantBase" Abstract="True">
    <description>A beautiful cultivated flower.</description>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible />
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <sowWork>800</sowWork>
      <sowTags>
        <li>Ground</li>
        <li>Decorative</li>
      </sowTags>
      <growMinGlow>0.3</growMinGlow>
      <topWindExposure>0.1</topWindExposure>
      <growDays>1.5</growDays>
      <lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
      <visualSizeRange>0.3~1.05</visualSizeRange>
      <wildOrder>1</wildOrder>
      <purpose>Beauty</purpose>
    </plant>
  </ThingDef>
  <!--=========================== Daisy ==============================-->
  <ThingDef ParentName="Flowers_BaseFlower">
    <defName>Plant_Daisy</defName>
    <label>daisy</label>
    <graphicData>
